@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Subscriptions", "_Subscribednews", "Subscription")</li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            <li class="dropdown">

                <a class="dropdown-toggle" data-toggle="dropdown" href="@Url.Action("Index", "User", new {id = User.Identity.GetUserId()})">@User.Identity.GetUserName() <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li style="display: inline;">@Html.ActionLink("Profile", "Index", "User")</li>
                    <li style="display: inline;">@Html.ActionLink("Favorites", "Index", "Favorite", new {id = User.Identity.GetUserId()}, null)</li>
                    <li style="display: inline;">@Html.ActionLink("Manage Subscription", "Index", "Subscription")</li>


                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
